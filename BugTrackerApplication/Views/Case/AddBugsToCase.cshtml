@model BugTrackerApplication.Models.Case

@{
    ViewBag.Title = "AddBugsToCase";
}

<h2>AddBugsToCase</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.caseID, new { cid = ViewBag.cid })
    foreach (var item in Model.availableBugs)
    {
        <div class="checkbox">
            <label>
                <input type="checkbox"
                       name="selectedBugs"
                       value="@item.Value" /> @item.Text
                </label>
            </div>
    }
    <div class="form-group text-center">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
}

